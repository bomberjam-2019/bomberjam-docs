.index-block
  display: inline-block;
  width: 250px;
  margin: 0 20px 20px 0;
  box-shadow: 0px 4px 12px 0px rgba(0, 0, 0, 0.19);
  padding: 10px 20px;
  cursor: pointer;
  border-radius: 2px;
  line-height: 1.4
  text-decoration: none !important
  transition: transform .5s

  span
    color: color-default

  &__title
    display: block;
    color: color-link !important
    font-weight: bold
    margin-bottom: 5px

  &:hover
    transform: translate(0, -2px)

#twitter-feed
  margin-top: 35px